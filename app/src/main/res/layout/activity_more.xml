<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoreActivity" android:orientation="vertical">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:layout_margin="@dimen/all_margins"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/textView"/>
    <CheckBox
            android:text="Meat"
            android:textStyle="bold"
            android:layout_margin="@dimen/all_margins"
            android:textSize="30sp"
            android:onClick="onCheckClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox"/>
    <RadioGroup android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton
                android:text="Male"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="@dimen/all_margins"
                android:onClick="onRadioClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioMale"/>
        <RadioButton
                android:text="Female"
                android:textSize="30sp"
                android:textStyle="bold"
                android:onClick="onRadioClick"
                android:layout_margin="@dimen/all_margins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioFemale"/>
    </RadioGroup>

    <Switch
            android:text="Switch"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:onClick="onSwitchClick"
            android:layout_margin="@dimen/all_margins"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>

    <Button
            android:layout_width="match_parent"
            android:text="Show Toast"
            android:onClick="onToastClick"
            android:layout_margin="@dimen/all_margins"
            android:layout_height="wrap_content"/>

</LinearLayout>